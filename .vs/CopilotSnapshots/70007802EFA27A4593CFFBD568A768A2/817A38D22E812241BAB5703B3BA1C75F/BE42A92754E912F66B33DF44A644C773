@model UserRequestVm
@{
    ViewData["Title"] = "Request Details";

    // Determine who the request is currently pending with (best-effort from available data)
    string pendingWith = null;
    if (Model != null)
    {
        if (Model.Status != null && Model.Status.Equals("Pending", System.StringComparison.OrdinalIgnoreCase))
        {
            pendingWith = Model.RequestedBy ?? Model.ApprovedBy;
            if (string.IsNullOrEmpty(pendingWith) && Model.History != null && Model.History.Any())
            {
                pendingWith = Model.History.OrderByDescending(h => h.Timestamp).FirstOrDefault()?.UserName;
            }
        }
        else
        {
            // if not pending, show the approver if available
            pendingWith = Model.ApprovedBy;
        }
    }
}

<style>
    /* Lightweight page-specific styles (UI only) */
    .details-container {
        max-width: 1100px;
        margin: 18px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 1px 6px rgba(0,0,0,0.06);
        margin-bottom: 18px;
    }

    .card-header {
        font-weight: 600;
        background: transparent;
        border-bottom: none;
        padding: 16px 20px;
        font-size: 1.05rem;
        color: #111827;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 20px;
        border-top: 1px solid #f3f4f6;
    }

    .info-label {
        color: #6b7280;
        font-size: 0.95rem;
    }

    .info-value {
        color: #111827;
