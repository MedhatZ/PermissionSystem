        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .st-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .st-approved {
        background: #dcfce7;
        color: #166534;
    }

    .st-rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    .permission-badge {
        background: #eef2ff;
        color: #4f46e5;
        padding: 6px 10px;
        border-radius: 6px;
        margin-right: 6px;
        margin-bottom: 6px;
        display: inline-block;
    }

    .details-content {
        white-space: pre-wrap;
        color: #374151;
    }

    /* Timeline */
    .history-timeline {
        padding: 14px 20px;
    }

    .timeline-item {
        border-left: 3px solid #e6e9ef;
        padding: 12px 16px 12px 20px;
        margin-bottom: 12px;
        position: relative;
        background: #fafafa;
        border-radius: 6px;
    }

    .timeline-date {
        font-size: 0.85rem;
        color: #6b7280;
        margin-bottom: 6px;
    }

    .timeline-action {
        font-weight: 600;
        color: #111827;
        margin-bottom: 6px;
    }

    .timeline-user {
        font-size: 0.9rem;
        color: #374151;
    }

    .timeline-notes {
        margin-top: 8px;
        color: #374151;
        font-size: 0.95rem;
    }

    /* Comments */
    .comment-item {
        padding: 12px 16px;
        border-top: 1px solid #f3f4f6;
    }

    .comment-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
        font-weight: 600;
        color: #111827;
    }

    .comment-text {
        color: #374151;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: #f8fafc;
        border-radius: 8px;
        border: 1px solid #e6eef8;
        color: #0f172a;
        text-decoration: none;
    }

    /* 🔵 New styles for additional fields */
    .request-type-badge {
        background: #e0e7ff;
        color: #3730a3;
        padding: 6px 10px;
        border-radius: 6px;
        font-weight: 600;
    }

    .update-type-badge {
        background: #f0f9ff;
        color: #0369a1;
        padding: 6px 10px;
        border-radius: 6px;
        font-weight: 600;
    }

    /* Export button */
    .export-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: #111827;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }
