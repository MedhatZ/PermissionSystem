@model List<UserRequestVm>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>System</th>
            <th>Status</th>
            <th>Details</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.SystemName</td>
                    <td>@r.Status</td>
                    <td>@r.Details</td>
                    <td>@r.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        }
    </tbody>
</table>
