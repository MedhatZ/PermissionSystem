@{
    ViewData["Title"] = "Access Denied";
}

<style>
    .access-denied-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 20px;
    }

    .access-denied-card {
        background: white;
        border-radius: 20px;
        padding: 48px 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
        border: 1px solid #e2e8f0;
    }

    .access-denied-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        color: white;
        font-size: 32px;
    }

    .access-denied-title {
        font-size: 28px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 16px;
    }

    .access-denied-message {
        font-size: 16px;
        color: #64748b;
        line-height: 1.6;
        margin-bottom: 32px;
    }

    .contact-info {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        border-left: 4px solid #3b82f6;
    }

    .contact-title {
        font-weight: 600;
        color: #475569;
        margin-bottom: 8px;
    }

    .contact-details {
        color: #64748b;
        font-size: 14px;
    }

    .btn-retry {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

        .btn-retry:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
            color: white;
        }
</style>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="bi bi-shield-x"></i>
        </div>

        <h1 class="access-denied-title">Access Denied</h1>

        <div class="access-denied-message">
            <p>Sorry, you don't have permission to access the system.</p>
            <p>You must be registered in the system first to be able to access it.</p>
        </div>

        <div class="contact-info">
            <div class="contact-title">For assistance, please contact:</div>
            <div class="contact-details">
                IT Department - Systems Management<br>
                Phone: 00966-11-1234567 | Extension: 1234<br>
                Email: it.support@saptco.com.sa
            </div>
        </div>

        <button class="btn-retry" onclick="window.location.reload()">
            <i class="bi bi-arrow-clockwise"></i>
            Try Again
        </button>
    </div>
</div>

<script>
    // Add simple animations
    document.addEventListener('DOMContentLoaded', function() {
        const card = document.querySelector('.access-denied-card');
        card.style.transform = 'translateY(20px)';
        card.style.opacity = '0';

        setTimeout(() => {
            card.style.transition = 'all 0.5s ease';
            card.style.transform = 'translateY(0)';
            card.style.opacity = '1';
        }, 100);
    });
</script>