<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Permission System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f5f6fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #1f2937; /* Dark Gray */
            color: #fff;
            padding-top: 20px;
        }

        .sidebar a {
            padding: 12px 20px;
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            font-size: 15px;
        }

        .sidebar a:hover,
        .sidebar .active {
            background: #374151;
            color: #fff;
        }

        .content {
            margin-left: 250px;
            padding: 25px;
        }

        .navbar-custom {
            margin-left: 250px;
        }
    </style>
</head>

<body>

    <!-- Left Sidebar -->
    <div class="sidebar">
        <h4 class="text-center mb-4">🔐 Permission System</h4>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
           asp-controller="Home" asp-action="Index">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "active" : "")"
           asp-controller="Requests" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Create Request
        </a>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "BulkUpload" ? "active" : "")"
           asp-controller="Requests" asp-action="BulkUpload">
            <i class="bi bi-upload"></i> Bulk Upload
        </a>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "Approvals" ? "active" : "")"
           asp-controller="Approvals" asp-action="Index">
            <i class="bi bi-check2-square"></i> Approvals
        </a>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "Review" ? "active" : "")"
           asp-controller="Permissions" asp-action="Review">
            <i class="bi bi-file-earmark-text"></i> Periodic Review
        </a>

        <a class="@(ViewContext.RouteData.Values["action"].ToString() == "Logout" ? "active" : "")"
           asp-controller="Auth" asp-action="Logout">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm navbar-custom">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">Permission System</span>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <span class="nav-link">
                        <i class="bi bi-person-circle"></i> @Context.Session.GetString("username")
                    </span>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
